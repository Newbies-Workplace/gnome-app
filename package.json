{
  "name": "gnome-app",
  "version": "1.0.0",
  "workspaces": ["apps/*", "packages/*"],
  "private": true,
  "scripts": {
    "prepare": "husky",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:ci": "turbo run lint:ci"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "husky": "9.1.7",
    "lint-staged": "15.2.11",
    "turbo": "^2.3.3"
  },
  "packageManager": "yarn@1.22.22",
  "lint-staged": {
    "*": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "dependencies": {
    "@types/react-native": "^0.72.8",
    "classnames": "^2.5.1",
    "react-router-dom": "^7.3.0"
  }
}
